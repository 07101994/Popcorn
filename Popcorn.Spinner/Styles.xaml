<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Popcorn.Spinner">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Popcorn.Spinner;component/Styles/LoadingArcs.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style
        x:Key="LoadingIndicatorArcsStyle"
        BasedOn="{StaticResource LoadingIndicatorArcsStyleKey}"
        TargetType="{x:Type controls:LoadingIndicator}" />
</ResourceDictionary>